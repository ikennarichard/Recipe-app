<h1>Recipes</h1>
<%= link_to 'Add Recipe', new_recipe_path %>

<% if @recipes.empty? %>
<p>No recipes added yet, click Add Recipe to add a new recipe</p>
<%else%>
<div>
  <ul>
  <%@recipes.each do |recipe|%>
    <li>
      <section class='recipe_card'>
        <div class='recipe_title'>
          <h2><%= link_to recipe.name, recipe_path(recipe) %></h2>

          <% if current_user == recipe.user %>
          <%= button_to 'Remove', recipe_path(recipe), method: :delete%>
          <% end %>
        </div>
        <p><%recipe.description%></p>
      </section>
    </li>
    <%end%>
  </ul>
</div>
<%end%>