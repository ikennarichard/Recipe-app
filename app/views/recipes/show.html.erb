<div>
  <h2><%= @recipe.name %></h2>
  <p>Preparation Time: <%= @recipe.preparation_time %> hours</p>
  <p>Cooking Time: <%= @recipe.cooking_time %> hours</p>

  <% if can? :update, @recipe %>
    <%= render 'toggle_public_status' %>
  <%end%>
  <p class="notice"><%= notice %></p>
</div>

<p>Steps go here</p>

<div class='interactions'>  
  <button>Generate shopping list</button>
  <button>Add Ingredient</button>
</div>

<% if @recipe.recipe_foods.empty? %>
  <p class="no-food">No ingredients added yet, use add ingredient
  to add ingredients
  </p>
<% else %>
<table border="1">
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Data 1</td>
      <td>Data 2</td>
      <td>Data 3</td>
      <td>Data 4</td>
    </tr>
  </tbody>
</table>
<%end%>

<% if current_user == @recipe.user %>
  <%= link_to 'Add Food', new_recipe_recipe_food_path(@recipe) %>
<% end %>